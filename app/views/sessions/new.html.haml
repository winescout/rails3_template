#signin_form_container
  .tab_content
    %h2 Log in
    .validation_error.ui-state-default
      %div
    %aside
      %p
        = link_to "Sign up","#", :class => "gotoSignup" 
      %p
        = link_to "Forgot password", "#", :class => "gotoForgotPassword"
  
    = form_for(resource, :as => resource_name, :url => session_path(resource_name), :remote => true, :html => { :id => "signin_form"}) do |f|
      %p
        = f.label :email
        %br/
        = f.text_field :email
      %p
        = f.label :password
        %br/
        = f.password_field :password
      - if devise_mapping.rememberable?
        %p
          = f.check_box :remember_me
          = f.label :remember_me
      %p= f.submit "Sign in", :id => "signin_submit_button"
  
   
